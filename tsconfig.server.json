{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "dist-server",
    "rootDir": ".",
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["server/**/*.ts", "src/types/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-server"]
}

