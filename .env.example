# ============================================
# Portfolio Manager - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control

# ============================================
# Server Configuration
# ============================================
# Port for the backend server
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# ============================================
# Authentication & Security
# ============================================
# JWT secret for token signing (generate a secure random string)
# In production, use: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-key-change-in-production

# ============================================
# Google Sheets Configuration (Legacy/Backup)
# ============================================
# Google Spreadsheet ID (from the spreadsheet URL)
GOOGLE_SPREADSHEET_ID=your-spreadsheet-id

# Google Service Account Email (for server-to-server auth)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# Google Service Account Private Key (JSON key content, escape newlines)
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour key here\n-----END PRIVATE KEY-----

# ============================================
# Google Cloud Storage Configuration (Primary Storage)
# ============================================
# GCS Bucket Name for storing initiatives data
GCS_BUCKET_NAME=your-bucket-name

# GCS Project ID
GCS_PROJECT_ID=your-project-id

# Path to Google Application Credentials JSON file (for local development)
# Leave empty if using default credentials or Cloud Run service account
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins for production
# Example: https://yourapp.com,https://www.yourapp.com
CORS_ALLOWED_ORIGINS=

# ============================================
# Development Options
# ============================================
# Set to 'true' to skip rate limiting in development (for easier testing)
SKIP_RATE_LIMIT=false

# ============================================
# Frontend Environment Variables (Vite)
# ============================================
# These variables must be prefixed with VITE_ to be exposed to the frontend

# API endpoint URL (backend server)
VITE_API_ENDPOINT=http://localhost:3001

# Google OAuth Client ID (for user authentication)
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# Gemini API Key (optional, for AI features if implemented)
GEMINI_API_KEY=your-gemini-api-key
